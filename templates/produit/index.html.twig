{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Image</th>
				<th>Name</th>
				<th>Description</th>
				<th>IsActive</th>
				<th>Stock</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>
						{% for image in produit.images %}
							<img src="{{asset('images/' ~ image.imageName)}}" alt="Image du produit">
						{% endfor %}


					</td>
					<td>{{ produit.name }}</td>
					<td>{{ produit.description }}</td>
					<td>{{ produit.isActive ? 'Yes' : 'No' }}</td>
					<td>{{ produit.stock ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
						<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
